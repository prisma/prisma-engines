datasource chinook {
  provider = "sqlite"
  url      = "file:./db/ConnectOrCreate.db"
}

model ModelA {
  id   String  @id @default(cuid())
  c_id String
  e_id String?
  f_id String

  manyB ModelB[] // M:N
  oneC  ModelC @relation(fields: [c_id], references: [id]) // 1!:1!
  manyD ModelD[] // M:1
  oneE  ModelE? @relation(fields: [e_id], references: [id]) // 1:1!
  oneF  ModelF  @relation(fields: [f_id], references: [id]) // 1!:1
}

model ModelB {
  id String @id @default(cuid())

  manyA ModelA[]
}

model ModelC {
  id   String @id @default(cuid())
  oneA ModelA // 1!:1!
}

model ModelD {
  id   String @id @default(cuid())
  a_id String

  OneA ModelA @relation(fields: [a_id], references: [id])
}

model ModelE {
  id   String @id @default(cuid())
  OneA ModelA
}

model ModelF {
  id   String @id @default(cuid())
  OneA ModelA?
}