datasource db {
  provider = "mongodb"
}

generator js {
  provider = "prisma-client"
}

model User {
  id        String @id @map("_id") @db.ObjectId
  firstName String
  lastName  String
  age       Int
  location  String

  @@fulltext([age(sort: Desc), firstName, lastName, location(sort: Asc)])
}
