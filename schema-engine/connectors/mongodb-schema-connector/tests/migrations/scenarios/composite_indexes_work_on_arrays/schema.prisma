datasource db {
  provider = "mongodb"
}

generator js {
  provider = "prisma-client"
}

type Address {
  city   String
  street String
  number Int
}

model User {
  id        Int       @id @map("_id")
  addresses Address[]

  @@unique([addresses.number])
  @@index([addresses.street])
  @@fulltext([addresses.city])
}
