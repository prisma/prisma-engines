datasource db {
  provider = "mongodb"
  url      = "mongodb://"
}

generator js {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]
}

model User {
  id        String @id @map("_id") @db.ObjectId
  firstName String
  lastName  String
  age       Int
  location  String

  @@fulltext([firstName, lastName, location(sort: Asc)], map: "UserExistingIndex")
}
