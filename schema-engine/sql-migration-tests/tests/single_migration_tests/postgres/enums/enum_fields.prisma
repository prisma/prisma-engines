datasource mydb {
    provider = "postgresql"
    url = env("TEST_DATABASE_URL")
}

model MyTable {
    id Int @id
    a Activity @default(SLEEPING)
    k Kind? @default(error)
    r Result @default(succeeded)
}

enum Result {
  succeeded
  failed
}

enum Activity {
  DANCING
  SLEEPING
  READING
}

enum Kind {
  info
  warning
  error
}

