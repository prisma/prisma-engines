datasource pg {
    provider = "postgresql"
    url = env("TEST_DATABASE_URL")
}

model Avocado {
  id String @id
  status Ripeness
}

enum Ripeness {
    NOT_RIPE_ENOUGH
    TOO_RIPE

    @@map("avocado_ripeness_status")
}
