datasource testds {
    provider = "postgresql"
    url = env("TEST_DATABASE_URL")
    schemas = ["veggies", "roots"]
}

generator js {
    provider = "prisma-client-js"
    previewFeatures = ["multiSchema"]
}

model zoodles {
  id Int @id
  shiratakies shirataki[]
  @@schema("veggies")
}

model shirataki {
  id Int @id
  zoodles zoodles[]
  @@schema("roots")
}

