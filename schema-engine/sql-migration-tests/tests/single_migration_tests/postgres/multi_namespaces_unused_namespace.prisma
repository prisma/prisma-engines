datasource testds {
    provider = "postgresql"
    url = env("TEST_DATABASE_URL")
    namespaces = ["public", "security", "users", "unused"]
}

generator js {
    provider = "prisma-client-js"
    previewFeatures = ["multiSchema"]
}

model Test {
  id Int @id
  name String
  @@namespace("users")
  @@unique([name])
}

model Test2 {
  id Int @id
  @@namespace("public")
}

model Test3 {
  id Int @id
  type UserType
  @@namespace("security")
}

enum UserType {
  Bacteria
  Archea
  Eukaryote

  @@namespace("users")
}

model Test4 {
  id Int @id
  test5 Test5 @relation(fields: [id], references: [id])
  @@namespace("public")
}

model Test5 {
  id Int @id
  test4 Test4[]
  @@namespace("security")
}

