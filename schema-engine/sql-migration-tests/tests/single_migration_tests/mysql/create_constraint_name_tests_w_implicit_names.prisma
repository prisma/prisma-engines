datasource mydb {
    provider = "mysql"
    url = "dummy-url"
    relationMode = "prisma"
}

model A {
    id   Int    @id
    name String @unique
    a    String
    b    String
    B    B[]    @relation("AtoB")
    @@unique([a, b], name: "compound")
    @@index([a])
}

model B {
    a   String
    b   String
    aId Int
    A   A      @relation("AtoB", fields: [aId], references: [id])
    @@index([a,b])
    @@id([a, b])
}

