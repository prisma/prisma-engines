datasource db {
  provider = "mongodb"
  url      = "mongodb://"
}

generator js {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedIndexes", "fullTextIndex"]
}

type Address {
  street String
}

model User {
  id        String  @id @map("_id") @db.ObjectId
  firstName String
  lastName  String
  address   Address

  @@fulltext([firstName, lastName, address.street])
}
