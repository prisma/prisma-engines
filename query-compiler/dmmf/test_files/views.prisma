generator client {
  provider = "prisma-client"
  previewFeatures = ["views"]
}

model User {
  id      String @id
  email   String   @unique
  name    String?
  profile Profile?
}
model Profile {
  id        String @id
  bio       String
  user      User      @relation(fields: [userId], references: [id])
  userId    String @unique
}

view UserInfo {
  id    String
  email String
  name  String
  bio   String
}
