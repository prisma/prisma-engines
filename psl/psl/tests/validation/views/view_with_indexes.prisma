datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator js {
  provider        = "prisma-client"
  previewFeatures = ["views"]
}

view ValidUnique {
  name String @unique
}

view Mountain {
  name   String @unique(map: "name_idx")
  region String

  @@unique([region(length: 10)])
  @@index([name, region], type: Gin)
}

