generator client {
  provider        = "prisma-client"
  previewFeatures = ["fullTextIndex"]
}

datasource db {
  provider = "mongodb"
}

model Blog {
  id      String @id @map("_id")
  content String
  title   String
  @@fulltext([content, title])
}
