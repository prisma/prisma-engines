datasource mdb {
  provider = "mongodb"
  url = env("TESTDBURL")
}

type A {
    pk String @id
    field Int @unique
    content String
    other Float
    rank Int

    @@id([pk])
    @@fulltext([content])
    @@index([other, field])
    @@unique([content, rank])
}

model B {
    id Int @id @map("_id")
    a  A
}


