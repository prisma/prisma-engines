datasource db {
  provider = "mysql"
}

generator client {
  provider        = "prisma-client"
  previewFeatures = ["shardKeys"]
}

model User {
  id        Int    @id
  firstName String
  lastName  String

  @@shardKey(["firstName", "lastName"])
}

