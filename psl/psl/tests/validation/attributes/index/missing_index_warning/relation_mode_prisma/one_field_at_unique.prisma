generator client {
    provider        = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url = env("TEST_DATABASE_URL")
    relationMode = "prisma"
}

model SomeUser {
    id Int @id
    profile Profile?
}

model Profile {
    id Int @id
    userId Int @unique
    user SomeUser? @relation(fields: [userId], references: [id])
}
