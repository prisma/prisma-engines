    url          = "dummy-url"
    relationMode = "prisma"
}

model SomeUser {
    idA   Int
    idB   Int
    idC   Int
    posts Post[]

    @@id([idA, idB, idC])
}

model Post {
    userIdA Int      @unique
    userIdB Int
    userIdC Int      @unique
    user    SomeUser @relation(fields: [userIdA, userIdB, userIdC], references: [idA, idB, idC])

    @@id([userIdA, userIdB])
}

