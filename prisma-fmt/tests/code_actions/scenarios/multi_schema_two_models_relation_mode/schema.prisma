generator client {
    provider        = "prisma-client"
    previewFeatures = []
}

datasource db {
    provider     = "postgresql"
    url          = env("TEST_DATABASE_URL")
    relationMode = "prisma"
    schemas      = ["one", "two"]
}

model User {
    id     Int  @id
    post   Post @relation(fields: [postId], references: [id])
    postId Int
}

model Post {
    id   Int    @id
    User User[]

    @@schema("two")
}
